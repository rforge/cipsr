citHeader("To cite package 'rconifers' in publications use:")
     
desc <- packageDescription("rconifers")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual",
	title = "CIPS-R: An R interface to the Organon and Cipsanon models",
              author = personList(as.person("Nathaniel Osborne"),
                                  as.person("David Hann"),
                                  as.person("Doug Maguire")),
              year = year,
              note = vers,
     
              textVersion =
              paste("Nathaniel Osborne, David Hann and Doug Maguire (",
                    year,
                    "). CIPS-R: An R interface to the Organon and Cipsanon models.",
                    vers, ".", sep=""))

